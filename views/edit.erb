<form action="/students/<%= @student.id %>" method="post">
  <!-- First name entry field -->
  <label for="first-name-field">First Name:</label>
  <input id="first-name-field" type="text" name="first_name" value= "<%= @student.first_name %>">

  <!-- last name entry field -->
  <label for="last-name-field">Last Name:</label>
  <input id="last-name-field" type="text" name="last_name" value = "<%= @student.last_name %>">

  <!-- dropdown for houses -->
  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <option value="1" <%= "selected" if @student.house_id == "1" %>>Gryffindor</option>
    <option value="2" <%= "selected" if @student.house_id == "2" %>>Hufflepuff</option>
    <option value="3" <%= "selected" if @student.house_id == "3" %>>Ravenclaw</option>
    <option value="4" <%= "selected" if @student.house_id == "4" %>>Slytherin</option>
  </select>

  <!-- age entry field -->
  <label for="age">Age:</label>
  <input id="age" type="number" name="age" value ="<%= @student.age %>">

  <!-- submit button -->
  <input type="submit" value="Edit Student">
</form>
